#include <iostream>
using namespace std;

int main() {
    float a, b; // variables to store numbers

    cout << "Enter first number (a): ";
    cin >> a;

    cout << "Enter second number (b): ";
    cin >> b;

    cout << "\nSum = " << a + b;
    cout << "\nDifference = " << a - b;
    cout << "\nProduct = " << a * b;

    if (b != 0)
        cout << "\nQuotient = " << a / b;
    else
        cout << "\nDivision not possible (b = 0)";

    cout << endl;
    return 0;
}
